{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "outputs": [
        "dist/**",
        "storybook-static/**",
        ".next/**",
        "!.next/cache/**"
      ],
      "dependsOn": ["^build"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev-components": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "update-dependencies": {
      "cache": false
    }
  }
}
